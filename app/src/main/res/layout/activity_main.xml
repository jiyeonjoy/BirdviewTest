<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    >
    <data>
        <variable
            name="main"
            type="com.jiyeonchoi.birdviewtest.MainActivity" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity"
        android:background="@color/SecondColor">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/mainText"
            android:textSize="25sp"
            android:textStyle="bold"
            android:textColor="@color/ThirdColor"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="@+id/text10000"/>

        <TextView
            android:id="@+id/text100"
            android:layout_width="0sp"
            android:layout_height="40sp"
            android:gravity="center"
            app:layout_constraintVertical_weight="1"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:text="@string/p100"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/SecondColor"
            android:background="@drawable/btn_circle"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/text10000"
            app:layout_constraintTop_toTopOf="parent"/>


        <TextView
            android:id="@+id/text10000"
            android:layout_width="0sp"
            android:layout_height="40sp"
            android:gravity="center"
            app:layout_constraintVertical_weight="1"
            android:text="@string/p10000"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/SecondColor"
            android:background="@drawable/btn_circle"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/text500000"
            app:layout_constraintLeft_toRightOf="@+id/text100"
            app:layout_constraintTop_toTopOf="parent"/>


        <TextView
            android:id="@+id/text500000"
            android:layout_width="0sp"
            android:layout_height="40sp"
            android:gravity="center"
            app:layout_constraintVertical_weight="1"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:text="@string/p500000"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/SecondColor"
            android:background="@drawable/btn_circle"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/text10000"
            app:layout_constraintTop_toTopOf="parent"/>

        <ProgressBar
            android:id="@+id/progressBar"
            android:visibility="gone"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>